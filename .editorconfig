root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[{Makefile,*.mk,go.mod,go.sum,*.go,.gitmodules,*.sh,*.dash,*.bash,*.zsh}]
indent_style = tab
indent_size = 4

[*.rs]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{hs,lhs}]
indent_style = space
indent_size = 4
max_line_length = 80

[*.elm]
indent_style = space
indent_size = 4
